<%= form_with model: [@tweeet, @tweeet.comments.build] do |f|%>
         <div><%= f.text_area :body,  placeholder:"Reply to a Tweet by #{@tweeet.user.username.capitalize}", class: 'form-control', rows: 5, autofocus: true%></div><br>
         <div class = 'text-left'><%= f.submit 'Comment', class:'btn btn-success ' %></div>
<%end%>