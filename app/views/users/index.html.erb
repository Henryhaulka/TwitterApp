<h2 class = 'text-center mt-2'>All User</h2>
<div class = 'grid-system'>
    <%@users.each do |user|%>
        <ul class="list-group list-group-flush mb-3">
           
             <%= link_to  user,  class:'text-dark text-decoration-none' do%>
                <div class = 'd-flex'>
                  <div class='mt-3'><%=  image_tag("#{ user.avatar}", class:'list_image')%></div>
                      <div class = 'ml-4'>
                            <p class="mt-2 pr-0 mr-0 font-weight-bold"><%= user.name%></p>
                            <p class= " pt-0 mr-4">@<%= user.username%></p>
                      </div>
                 </div>
                 <%end%>
                 <%if user_signed_in?%>
                    <% if  current_user.followings.find_by(receiver_id: user.id).present?%>
                      <div class= 'mb-3'>
                        <%=link_to('Following', user ,  class:'btn btn-success w-100')%>
                      </div>
                    <%elsif user == current_user%>
                        <div class= 'btn btn-success w-100'>Current_user</div>
                    <%else%>
                      <div class= 'mb-3'>
                        <%=link_to('Follow',followerships_path(user: user), method: :post, class: 'btn btn-primary w-100' )%>
                      </div>
                    <%end%>
                 <%end%>
           
          </ul>
    <%end%>
</div>