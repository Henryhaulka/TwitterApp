 <% if  @followers.present?%>
    <div class="mx-auto w-25 text-center mt-3 ">
    <h3><%=current_user.name%>'s Followers</h3><br>
    <div class="card" >
      <div class="card-header p-4">
        <% @followers.each do |f|%>
        <ul class="list-group list-group-flush bbm pb-3">
              <div class = 'd-flex justify-content-around'>
                        <div class='mt-3'>
                            <%= link_to( image_tag("#{f.sender.avatar}", class:'list_image'), f.sender)%>
                        </div>
                          <div class = 'ml-4'>
                              <p class="mt-2 pr-0 mr-0 font-weight-bold"><%= f.sender.name%></p>
                              <p class= " pt-0 mr-4">@<%= f.sender.username%></p>   
                          </div>
              </div>
                <span class= 'time_ago'>@<%= f.sender.username%> started following you: <%=time_ago_in_words(f.created_at)%> ago</span>
          </ul>
        <%end%>
      </div>
    </div>
    </div>
<%end%>

<% if  @followings.present?%>
    <div class="mx-auto w-25 text-center mt-3 mb-5">
    <h3><%=current_user.name%>'s Followings</h3><br>
      <div class="card" >
      <div class="card-header p-4">
        <% @followings.each do |f|%>
        <ul class="list-group list-group-flush bbm pb-3">
        <div class = 'd-flex justify-content-around'>
                  <div class='mt-3'><%= link_to( image_tag("#{f.receiver.avatar}", class:'list_image'), f.receiver)%></div>
                      <div class = 'ml-4'>
                            <p class="mt-2 pr-0 mr-0 font-weight-bold"><%= f.receiver.name%></p>
                            <p class= " pt-0 mr-4">@<%= f.receiver.username%></p>
                            
                      </div>
                </div>
                <span class= 'time_ago'> you started following @<%=f.receiver.username%>: <%=time_ago_in_words(f.created_at)%> ago</span>
         
         <% if current_user.followings.find_by(receiver_id: f.receiver).present?%>
              <div class = 'mt-2'> <%=link_to('Unfollow', followership_path(current_user.followings.find_by(receiver_id: f.receiver),user: f.receiver), method: :delete, data: { confirm: "Are you sure you want to unfollow #{f.receiver.name}"}, class: 'btn btn-danger w-50' )%></div>
          <%end%>   
        </ul>
        
        <%end%>

        </div>
        </div>
    </div>
  <%end%>
