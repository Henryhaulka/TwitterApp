<%= form_with model: [@tweeet, SubComment.new] do |f|%>
    <div><%= f.text_area :body,  placeholder:"Reply to a Comment #{ commented_twit.user.username.capitalize}", class: 'form-control', rows: 2, autofocus: true%></div><br>
    <div><%= f.number_field :comment_id, value: commented_twit.id, hidden: :true%></div>
    <div><%= f.submit 'Reply', class:'btn btn-success' %></div>
<%end%>